{
  "name": "nubemsecurity",
  "version": "1.0.0",
  "description": "Production-ready AI-powered Cybersecurity Assistant with RAG",
  "main": "src/server.js",
  "type": "module",
  "bin": {
    "nubemsec": "./nubemsec"
  },
  "scripts": {
    "start": "node src/server.js",
    "start:simple": "node src/simple-server.js",
    "start:cli": "node src/index.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.js\"",
    "postinstall": "npm link"
  },
  "keywords": [
    "cybersecurity",
    "ai",
    "pentesting",
    "security",
    "nubemgenesis",
    "kali",
    "rag"
  ],
  "author": "NubemSecurity Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@langchain/community": "^0.0.47",
    "@langchain/openai": "^0.0.28",
    "@pinecone-database/pinecone": "^2.0.1",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0-rc.12",
    "chromadb": "^1.7.3",
    "commander": "^12.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "inquirer": "^9.2.15",
    "js-tiktoken": "^1.0.10",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.1.25",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.28.0",
    "ora": "^8.0.1",
    "pdf-parse": "^1.1.1",
    "uuid": "^9.0.1",
    "xss-clean": "^0.1.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.6.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "transform": {},
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  }
}
